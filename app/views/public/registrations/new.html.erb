<div class="container takasa">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :last_name, "名前　　　　　　　　　　　（姓）　" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :first_name, "（名）　" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div><br>

    <div class="field">
      <%= f.label :last_name_kana, "フリガナ　　　　　　　　　（セイ）" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.label :first_name_kana, "（メイ）" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div><br>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>　　　　　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>

    <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>　　　　　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div><br>

    <div class="field customer-address">
      <%= f.label :address, "住所" %>　　　　　　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div><br>

      <div class="field">
      <%= f.label :telephone_number,"電話番号（ハイフンなし）" %>　　　　　<%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div><br>

    <div class="field">
      <%= f.label :password, "パスワード（６文字以上）" %>
      <% if @minimum_password_length %>
      <% end %>　　　　　<%= f.password_field :password, autocomplete: "new-password" %>
    </div><br>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>　　　　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>

  <h4 style="width: 180px;background-color: #f0f6da; text-align: center;">既に登録済の方</h4>
  <%= link_to "こちら", new_session_path(resource_name) %><span>からログインしてください。</span>

</div>