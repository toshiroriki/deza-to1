<div class="container takasa">
  <h2>商品詳細</h2><br>
  <div class="row">
    <!-- 画像選択欄 -->
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, size:"300*300" ,  fallback: "images.jpeg"%><br>
      <br>
    </div>

    <!-- 商品登録フォーム -->
    <div class="col-xs-8">
      <h4 style="margin-bottom: 30px;">商品名
        <%= @item.name %>
      </h4>

      <div style="display: flex;">
        <h4 style="margin: 0 30px 30px 0;">商品説明</h4>
        <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
          <%= @item.introduction %>
        </div>
      </div>

        <h4 style="margin-bottom: 30px;">ジャンル
          <%= @item.genre.name %>
        </h4>

        <h4 style="margin-bottom: 30px;">税込価格<%= @item.price %>
	        								<%= (@item.price*1.1).to_i %> 円<br>
						(税抜価格)
        </h4>

        <h4 style="margin-bottom: 30px;">販売ステータス
        <% if @item.is_active == true %>
        販売中
        <% else %>
        販売停止
        <% end %>

        </h4>

        <%= button_to '編集する',edit_admin_item_path(@item.id), method: :get ,class: "btn btn-primary ", style: "margin-left:70%;"%>
    </div>
  </div>
</div>